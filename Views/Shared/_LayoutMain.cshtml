@{
    if (ViewBag.Name == null && Request.Cookies["Name"] == null)
    {
        Response.Redirect("/Index");
    }
    ViewBag.Name=  ViewBag.Name ?? Request.Cookies["Name"].Value;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - @ViewContext.ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/cover.css" rel="stylesheet" />
</head>
<body class="text-center">
    <div class="container">
        <div class="d-flex p-3 mx-auto flex-column">
            <header class="masthead mb-auto">
                <div class="inner">
                    <h3 class="masthead-brand">@ViewContext.ViewBag.Title</h3>
                    <div class="d-flex float-right">
                        <div class="dropdown nav-masthead">
                            <a class="nav-link active dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Management
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="/Main">Statistics</a>
                                <a class="dropdown-item" href="/Users/Index">User</a>
                                <a class="dropdown-item" href="/Commodity/Index">Commodities</a>
                                <a class="dropdown-item" href="/SellOrders/Index">Sell Orders</a>
                                <a class="dropdown-item" href="/PurchaseOrders/Index">Purchase Orders</a>
                                @*<a class="dropdown-item" href="#">Another action</a>
        <a class="dropdown-item" href="#">Something else here</a>*@
                            </div>
                        </div>
                        <div class="dropdown nav-masthead">
                            <a class="nav-link active dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @ViewBag.Name
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="/Main/SignOut">Sign out</a>
                                @*<a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>*@
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            
            <main role="main" class="inner cover">
                @RenderBody()
            </main>

            <footer class="mastfoot mt-auto">
                <div class="inner">
                    <p>@DateTime.Now.Year - <a href="mailto:bingqiang_zhou@qq.com">@@Bingqiang Zhou</a>.</p>
                </div>
            </footer>
        </div>
    </div>
    <script type="text/javascript" src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/main.js"></script>

</body>
</html>
